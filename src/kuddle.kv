BoxLayout:
    orientation: "vertical"
    MDToolbar:
        title: "Fitness App"
        elevation: 10
        left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]
    MDNavigationLayout:
        ScreenManager:
            MainScreen:
        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:


<MainScreen>:
    name: "main"
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(40)
        BoxLayout:
            size_hint_y: None
            height: self.minimum_height
            Widget:
            MDLabel:
                text: "Choose a Fitness Class to Join"
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]
                width: dp(400)
                font_size: sp(25)
            Widget:
        MDTextField:
            id: username
            hint_text: "Username"
            size_hint_x: None
            width: self.parent.width/2
            pos_hint: {"center_x": 0.5}
        BoxLayout:
            orientation: "vertical"
            size_hint_x: None
            width: self.minimum_width
            pos_hint: {"center_x": 0.5}
            BoxLayout:
                MDCheckbox:
                    id: yoga
                    size_hint: None, None
                    size: "48dp", "48dp"
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    group: "class"
                MDLabel:
                    text: "Yoga"
                    size_hint_x: None
                    width: dp(100)
            BoxLayout:
                MDCheckbox:
                    id: gym
                    size_hint: None, None
                    size: "48dp", "48dp"
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    group: "class"
                MDLabel:
                    text: "Gym"
                    size_hint_x: None
                    width: dp(100)
            BoxLayout:
                MDCheckbox:
                    id: dance 
                    size_hint: None, None
                    group: "class"
                    size: "48dp", "48dp"
                    pos_hint: {'center_x': .5, 'center_y': .5}
                MDLabel:
                    text: "Dance"
                    size_hint_x: None
                    width: dp(100)
            Widget:
                size_hint_y: None
                height: dp(50)
            MDRaisedButton:
                text: "Pick A Time"
                on_release: root.show_time_picker()
            BoxLayout:
                spacing: dp(15)
                size_hint_x: None
                width: self.minimum_width
                MDRaisedButton:
                    text: "Submit"
                    on_release: root.save_class()
                MDRaisedButton:
                    text: "Cancel"
                    on_release: root.cancel_class()
            
        Widget:


<ItemDrawer>:
    theme_text_color: "Custom"
    on_release: self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color

<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "kivymd.png"

    MDLabel:
        text: "KivyMD library"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: "arjunsomvanshi@gmail.com"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:

        DrawerList:
            id: md_list
